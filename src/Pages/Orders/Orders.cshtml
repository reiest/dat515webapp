@page
@model OrdersModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="text-left">
    <table class="table  table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">Order date</th>
                <th scope="col">Location</th>
                <th scope="col">Notes</th>
                <th scope="col">Status</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate</td>
                    <td>@order.Location.Building , @order.Location.RoomNumber, @order.Location.Notes</td>
                    <td>@order.Notes</td>
                    <td>@order.Status</td>
                    <td><a asp-page="OrderDetails" asp-route-id="@order.Id">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>